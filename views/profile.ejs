<html>

<head>
    <title>Profile Authentication</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">

</head>

<body>
<header>
        <nav class="navbar navbar-expand-lg navbar-light bg-info">
                <a class="navbar-brand" href="/">MK POST NOTE+</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                    <li class="nav-item active">
                      <a class="nav-link" href="/main">Home <span class="sr-only">(current)</span></a>
                    </li>
                    
                            <a class="nav-link" href="/logout">Log Out</a>
                          </li>
                  </ul>
                </div>
              </nav>

</header>
<div class="shadow-lg p-3 mb-5 bg-white rounded">
  <div class="media border p-3">
      <img src="https://www.w3schools.com/bootstrap4/img_avatar1.png" alt="<%=first%>  <%=last%>." class="mr-3 mt-3 rounded-circle" style="width:60px;">
      <div class="media-body">
        <h4>Welcome</h4>
        <h5><%=first%>  <%=last%>.</h5>
      </div>
    </div>
    </div>
<!-- Purple Header -->
<div class="edge-header deep-purple"></div>

<!-- Main Container -->
<div class="container free-bird">
  <div class="row">
    <div class="col-md-8 col-lg-7 mx-auto float-none white z-depth-1 py-2 px-2">

      <!--Naked Form-->
      <div class="card-body">
        <h2 class="h2-responsive"><strong>Post Your Note </strong></h2>
        <p class="pb-4">Below:</p>

        <!--Body-->
        <form action="/profile" method="post">
          <!-- <input hidden for='user_id' name='user_id' type="text" id="form1" class="form-control"> -->
          <h5 class="h5-responsive">Full Name </h5>
          <!-- Basic textbox -->
          <div class="md-form">
            <input for='fullname' name='fullname'type="text" id="form1" class="form-control">
            <label  class=""></label>
          </div>
  
          <!--Subject-->
          <h5 class="h5-responsive">Subject</h5>
          <div class="md-form">
            <!-- <i class="fas fa-envelope prefix"></i> -->
            <input for="subject" name="subject" type="text" id="form9" class="form-control validate">
            <!-- <label for="form9" data-error="wrong" data-success="right">Your email</label> -->
          </div>

          <!--Textarea with icon-->
          <h5 class="h5-responsive">Note Area</h5>
          <div class="md-form">
            <i class="fas fa-pencil-alt prefix"></i>
            <textarea for="blog" name="blog" type="text" id="form7" class="md-textarea form-control" rows="4"></textarea>
            <!-- <label for="form7">Textarea</label> -->
          </div>

          <div class="text-xs-left">
            <button class="btn btn-primary">Post</button>
          </div>
        </form>

        <div class="my-2">
          <p style="font-weight:300;font-size:0.75rem"></p>
        </div>

      </div>
      <!--Naked Form-->

    </div>
  </div>
</div>
<!-- /.Main Container -->
<style>
  #welcome{
    display: flex;

  }
</style>

</body>
